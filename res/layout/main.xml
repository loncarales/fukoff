<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/FukoffNormal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/fukoff"
            android:onClick="FukoffHandler" />

        <LinearLayout
            android:id="@+id/LinearLayout03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:scaleType="center"
                   android:src="@drawable/fukoff_logo" />

           <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/hit_this_button" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:src="@drawable/instructions" />
    <ImageButton
        android:id="@+id/StartRecording"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/start_recording"
        android:onClick="StartStopRecordingHandler" />
    <ImageButton
        android:id="@+id/PlayShare"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/play_share"
        android:onClick="PlayShareHandler" />
</LinearLayout>